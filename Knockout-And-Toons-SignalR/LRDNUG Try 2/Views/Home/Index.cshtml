@{
    ViewBag.Title = "Index";
}
<h1>Toons</h1>
<div style="float:left;">
    <label>First Name</label>
    <input data-bind="value: firstName, valueUpdate: 'afterkeydown', hasfocus: isFirstNameFocused" />
    <label>Last Name</label>
    <input data-bind="value: lastName, valueUpdate: 'afterkeydown'" />
    <div data-bind="visible: hasValue">
        <label>Full Name</label>
        <span data-bind="text: fullName"></span>
    </div>
    <button data-bind="click: addToon">Add Toon</button>
</div>

<div style="float:left;margin-left:10px;">
    <ul data-bind="foreach: toons">
        <li data-bind="text:ToonName"></li>
    </ul>
</div>



@section scripts {
    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <script src="~/Scripts/knockout-2.1.0.js"></script>
    <script src="~/Scripts/jquery.signalR-0.5.3.js"></script>
    <script type="text/javascript" src="/signalr/hubs"></script>
    <script src="~/Scripts/toons.js"></script>
}
